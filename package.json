{
  "name": "portfolio",
  "description": "My personal portfolio website built with Astro, React, and Tailwind CSS.",
  "repository": "felixhoffmnn/portfolio",
  "private": false,
  "version": "0.2.1",
  "author": "Felix Hoffmann <felix.emmanuel.hoffmann@gmail.com>",
  "scripts": {
    "prepare": "husky",
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "check": "astro check && tsc --noEmit && biome check",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.4.0",
    "@fontsource/inter": "^5.2.5",
    "@fontsource/outfit": "^5.2.5",
    "@tailwindcss/vite": "^4.1.8",
    "astro": "^5.8.1",
    "astro-icon": "^1.1.5",
    "astro-seo": "^0.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.2",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*": [
      "biome check --no-errors-on-unmatched"
    ],
    "*.{astro,md,mdx,json,ts,mjs}": [
      "prettier --check"
    ]
  }

{
  "name": "portfolio",
  "description": "My personal portfolio website built with Astro and Tailwind CSS.",
  "repository": "felixhoffmnn/portfolio",
  "private": false,
  "version": "0.2.1",
  "author": "Felix Hoffmann <post@felix-hoffmann.dev>",
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "prepare": "husky",
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "check": "astro check && tsc --noEmit && biome check",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/sitemap": "^3.7.0",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/outfit": "^5.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "@types/alpinejs": "^3.13.11",
    "alpinejs": "^3.15.4",
    "astro": "^5.16.11",
    "astro-icon": "^1.1.5",
    "astro-seo": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "2.3.11",
    "@tailwindcss/typography": "^0.5.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "biome check --no-errors-on-unmatched"
    ],
    "*.{astro,md,mdx,json,ts,mjs}": [
      "prettier --check"
    ]
  }
}

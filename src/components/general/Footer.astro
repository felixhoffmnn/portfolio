---
import { buttonVariants } from "@/components/ui/button";
import { info } from "@/data/info";
import { Icon } from "astro-icon";

const iconSize = 20;
---

<footer
  class="container mb-4 mt-16 flex flex-col-reverse items-center justify-between gap-8 sm:flex-row md:mb-8 md:flex-row"
  aria-label="Footer"
>
  <div class="flex h-5 items-center space-x-6 text-sm">
    <a class={buttonVariants({ variant: "link", size: "none" })} href="/imprint">Impressum</a>
    <a class={buttonVariants({ variant: "link", size: "none" })} href="/privacy">Datenschutz</a>
  </div>
  <div class="grid grid-cols-3 items-center gap-4">
    <a
      aria-label="GitHub"
      href={info.socialMedia.github}
      class={buttonVariants({ variant: "ghost", size: "icon-sm" })}
      target="_blank"
    >
      <Icon pack="lucide" name="github" size={iconSize} class="stroke-white" alt="GitHub Icon" />
    </a>
    <a
      aria-label="LinkedIn"
      href={info.socialMedia.linkedin}
      class={buttonVariants({ variant: "ghost", size: "icon-sm" })}
      target="_blank"
    >
      <Icon pack="lucide" name="linkedin" size={iconSize} class="stroke-white" alt="LinkedIn Icon" />
    </a>
    <a
      aria-label="Email"
      href={`mailto:${info.socialMedia.email}`}
      class={buttonVariants({ variant: "ghost", size: "icon-sm" })}
      target="_blank"
    >
      <Icon pack="lucide" name="mail" size={iconSize} class="stroke-white" alt="Email Icon" />
    </a>
  </div>
</footer>

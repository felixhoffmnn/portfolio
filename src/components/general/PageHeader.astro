---
import { buttonVariants } from "../ui/button";

const { title, description, githubUrl, liveUrl } = Astro.props as {
  title: string;
  description?: string;
  back?: {
    link: string;
    name: string;
  };
  githubUrl?: string;
  liveUrl?: string;
};
---

<section class="mb-16">
  <!-- {
    back !== undefined && (
      <a class={buttonVariants({ variant: "link", size: "none" })} href={back.link}>
        <ArrowLeft size={18} />
        {back.name}
      </a>
    )
  } -->
  <div class="flex w-full flex-row place-content-between items-center gap-8">
    <div class="flex flex-col">
      <h1>{title}</h1>
      {description && <p class="text-muted-foreground">{description}</p>}
    </div>
    <div class="flex w-min flex-row gap-4">
      {
        liveUrl && (
          <a class={buttonVariants()} href={liveUrl} target="_blank" rel="noopener noreferrer">
            Live
          </a>
        )
      }
      {
        githubUrl && (
          <a class={buttonVariants()} href={githubUrl} target="_blank" rel="noopener noreferrer">
            GitHub
          </a>
        )
      }
    </div>
  </div>
</section>

---
import { buttonVariants } from "../ui/button";

const { title, description, githubUrl, liveUrl } = Astro.props as {
  title: string;
  description?: string;
  githubUrl?: string;
  liveUrl?: string;
};
---

<section class="mb-16 flex w-full flex-col justify-start gap-4 sm:flex-row sm:justify-between sm:gap-8">
  <div class="flex flex-col">
    <h1>{title}</h1>
    {description && <p class="text-muted-foreground">{description}</p>}
  </div>
  <div class="flex w-min flex-row items-center gap-4">
    {
      liveUrl && (
        <a class={buttonVariants({ size: "sm" })} href={liveUrl} target="_blank" rel="noopener noreferrer">
          Live
        </a>
      )
    }
    {
      githubUrl && (
        <a class={buttonVariants({ size: "sm" })} href={githubUrl} target="_blank" rel="noopener noreferrer">
          GitHub
        </a>
      )
    }
  </div>
</section>

---
import { buttonVariants } from "../ui/button";

interface Props {
  title: string;
  description?: string;
  githubUrl?: string;
  liveUrl?: string;
  docsUrl?: string;
}

const { title, description, githubUrl, liveUrl, docsUrl } = Astro.props;
---

<section class="flex w-full flex-col justify-start gap-4 sm:flex-row sm:justify-between sm:gap-8">
  <div class="flex flex-col space-y-2">
    <h1>{title}</h1>
    {description && <p class="text-xl text-muted-foreground">{description}</p>}
  </div>
  <div class="flex w-min flex-row items-center space-x-4">
    {
      liveUrl && (
        <a class={buttonVariants({ size: "sm" })} href={liveUrl} target="_blank">
          Live
        </a>
      )
    }
    {
      docsUrl && (
        <a class={buttonVariants({ size: "sm" })} href={docsUrl} target="_blank">
          Docs
        </a>
      )
    }
    {
      githubUrl && (
        <a class={buttonVariants({ size: "sm" })} href={githubUrl} target="_blank">
          GitHub
        </a>
      )
    }
  </div>
</section>
